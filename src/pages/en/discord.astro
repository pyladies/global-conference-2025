---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { align = "center" } = Astro.props;
const chatSvg = `<svg class="inline w-5 fill-blue-400" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>WeChat</title><path d="M 8.691,2.188 C 3.891,2.188 0,5.476 0,9.53 c 0,2.212 1.17,4.203 3.002,5.55 0.2086337,0.151345 0.2948774,0.420604 0.213,0.665 l -0.39,1.48 c -0.019,0.07 -0.048,0.141 -0.048,0.213 0,0.163 0.13,0.295 0.29,0.295 0.059556,-0.0024 0.1173167,-0.02107 0.167,-0.054 l 1.903,-1.114 c 0.2131475,-0.136005 0.4751737,-0.171819 0.717,-0.098 0.9218794,0.267684 1.8770435,0.403367 2.837,0.403 0.276,0 0.543,-0.027 0.811,-0.05 -0.857,-2.578 0.157,-4.972 1.932,-6.446 1.703,-1.415 3.882,-1.98 5.853,-1.838 C 16.711,4.953 13.091,2.188 8.691,2.188 Z m 8.247,6.67 c -1.797,-0.052 -3.746,0.512 -5.28,1.786 -1.72,1.428 -2.687,3.72 -1.78,6.22 0.942,2.453 3.666,4.229 6.884,4.229 0.826,0 1.622,-0.12 2.361,-0.336 0.201744,-0.0613 0.420203,-0.03134 0.598,0.082 l 1.584,0.926 c 0.04144,0.02828 0.08989,0.04454 0.14,0.047 0.134,0 0.24,-0.111 0.24,-0.247 0,-0.06 -0.023,-0.12 -0.038,-0.177 L 21.32,20.155 c -0.01471,-0.05072 -0.02245,-0.103197 -0.023,-0.156 -7.37e-4,-0.157232 0.07402,-0.305266 0.201,-0.398 C 23.024,18.48 24,16.82 24,14.98 24,11.77 21.069,9.143 17.344,8.892 V 8.89 C 17.209,8.88 17.074,8.863 16.937,8.86 Z"</svg>`;
const discordSvg = `<svg class="inline w-10 fill-indigo-500" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>Discord</title><path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/></svg>`;

const steps = [
    {
        number: 1,
        title: "Get your ticket",
        subtitle: `Visit pretix to get one.`,
        url: "#get-ticket",
    },
    {
        number: 2,
        title: "Join Discord",
        subtitle: `Using the invite link`,
        url: "#join-discord",
    },
    {
        number: 3,
        title: "Register in Discord",
        subtitle: `With your <b>Name</b> and <b>Order number</b>`,
        url: "#register-discord",
    },
    {
        number: 4,
        title: "Enjoy the conference!",
        subtitle: "Check the server structure",
        url: "#server-structure",
    },
];
---
<Layout title="Discord">
  <Container>
    <Sectionhead>
      <Fragment slot="subtitle">{t("header.discord_subtitle")}</Fragment>
          <Fragment slot="title">Discord <span set:html={discordSvg}/></Fragment>
      <Fragment slot="description">
        Join the conference Discord server to meet every participant, including
        Speakers, Sponsors, Keynotes, Volunteers and Organizers.  Enjoy talks,
        workshops, open spaces, get stream links, and many more activities!<br>
        Follow the next steps to enjoy the conference:
      </Fragment>
    </Sectionhead>

    <!-- Steps -->
    <div class="flex items-center pb-2 mb-4 text-sm">
        <div class="mx-auto max-w-5xl mt-10 text-black dark:text-white">
            <ol class="items-center w-full space-y-4 sm:flex sm:space-x-8 sm:space-y-0 rtl:space-x-reverse">
                {
                steps.map((step) =>
                <li class="flex items-center space-x-2.5 rtl:space-x-reverse">
                    <span class="flex items-center justify-center w-8 h-8 border border-black dark:border-white rounded-full shrink-0">
                        {step.number}
                    </span>
                    <span>
                        <a href={step.url}><h3 class="text-lg font-medium leading-tight no-underline pb-1">{step.title}</h3></a>
                        <p class="text-sm" set:html={step.subtitle} />
                    </span>
                </li>
                )}
            </ol>
        </div>
    </div>


    <!-- Long explanation of the server -->
    <div class="mx-auto max-w-5xl mt-10 text-black dark:text-white">
      <h2 class="text-3xl mt-4 py-10" id="get-ticket">
        Get your ticket
      </h2>
      <div class="pl-5">
        <div class="flex items-center p-4 mb-4 text-sm text-yellow-800 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300" role="alert">
          <svg class="shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
          </svg>
          <span class="sr-only">Info</span>
          <div>
            <span class="font-bold">Important:</span> every participant needs a
            <a class="underline" href="https://pretix.eu/pyladiescon/2025">conference ticket</a>
            in order to access the right channels in the Discord server; including
            Participants, Volunteers, and Sponsors.
          </div>
        </div>
        <p class="py-2">
        You can get a conference ticket on <a href="https://pretix.eu/pyladiescon/2025">our pretix page</a>.
        </p>
      </div>
      <h2 class="text-3xl mt-4 py-10" id="join-discord">
        Join Discord
      </h2>
      <div class="pl-5">
        <div class="flex items-center p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
          <svg class="shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
          </svg>
          <span class="sr-only">Info</span>
          <div>
              <span class="font-medium"><b>Note:</b></span> In case you already have a Discord account, you don't need to create a new one.
          </div>
        </div>
        <p class="py-2">
          You should have received an invite link via email, but in case you cannot find it,
          use this one: <a href="#">Not available yet</a>
        </p>
      </div>
      <h2 class="text-3xl mt-4 py-10" id="register-discord">
        Register in Discord
      </h2>
      <div class="pl-5">
        <p class="py-2">
        Once inside the server, head to the <code class="text-blue-400">#registration-form</code>
        channel, click on the
        <button type="button" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-3 py-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Register here ðŸ‘ˆ</button>
        button and a modal window will open, where you will need to enter your <b>Name</b> and <b>Ticket number</b>.
        </p>
        <p class="py-2">
        You need to enter <b>the exact</b> information from your conference ticket, that you
        received via email with a subject:<br><code class="text-gray-300">[PyLadiesCon 2025] Your
        order: XXXXX</code>, when you acquired the ticket.
        </p>
        <h3 class="pt-5 pb-2 text-xl font-semibold leading-8">
          Joining as an Participant
        </h3>
        <p>
        If this is your first PyLadiesCon, you should join Discord with the link that it will be
        sent to you a week before the conference.
        </p>
        <p>
        Once you register successfully, you will get assigned the <code class="text-yellow-400">Participant</code>
        role.
        </p>
        <h3 class="py-5 pb-2 text-xl font-semibold leading-8">
          Joining as a Sponsor
        </h3>
        <p class="py-2">
        If you are from a company that is <b>sponsoring the conference</b>, and you will participate
        in the many activities like Panel Discussion, Speed Interview, sharing information in your
        company's channel, you need to get a ticket with the <b>Voucher</b> that it will be sent to
        you, through the contact person at your company.
        </p>
        <p>
        This is very important for you to get the <code class="text-yellow-400">Sponsor</code>
        role.
        </p>
        <h3 class="pt-5 pb-2 text-xl font-semibold leading-8">
          Joining as a Speaker
        </h3>
        <p>
        If you have a confirmed Talk, Panel, or Keynote you should get a ticket using the Voucher
        that we will send you via email. The reason behind this is to automatically assign you
        the <code class="text-yellow-400">Speaker</code> role.
        </p>
        <h3 class="pt-5 pb-2 text-xl font-semibold leading-8">
          Joining as a Volunteer
        </h3>
        <p>
        If you are a conference Volunteer, it's highly probable you are already inside the server,
        but you <span class="text-red-500">will not</span> have access to the conference channels as
        long as you don't get a conference ticket, and do the registration process described at the
        top of this page.
        </p>
        <p class="py-2">
        If by some reason you haven't been assigned the <code class="text-yellow-400">Volunteer</code> contact
        the organization in the <code class="text-blue-400">#volunteers-general</code> channel.
        </p>
      </div>
      <h2 class="text-3xl mt-4 py-10" id="server-structure">
        The server structure
      </h2>
      <div class="pl-5">
        <p>
        Once you join the server, you will see two categories, one called <b>Conference Information</b> with two channels:
        <ul class="list-disc pl-10 py-1">
            <li>a text channel called <code class="text-blue-400">#rules</code>, with the rules of
                the server, and</li>
            <li>a text channel called <code class="text-blue-400">#code-of-conduct</code>, with the
                guidelines to participate in the event</li>
        </ul>
        </p>
        <p class="py-2">
        Another category called <b>Registration</b> with two channels:
        </p>
        <ul class="list-disc pl-10 py-1">
          <li>a text channel called <code class="text-blue-400">#registration-form</code> where
              you can see the button to register, and</li>
          <li>a forum channel called <code class="text-blue-400"><span set:html={chatSvg} />registration-help</code>,
              where you can ask any question regarding the registration process.</li>
        </ul>
        <p class="py-2">
            If you have any question after you registered, you can leave your question in the
            <code class="text-blue-400"><span set:html={chatSvg} />help</code> forum.
        </p>
        <h3 class="pt-5 pb-2 text-xl font-semibold leading-8">
            Get the latest updates
        </h3>
        <p>
        Once registered, the <b>Conference Information</b> will contains more channels:
        </p>
        <ul class="list-disc pl-10 py-1">
            <li><code class="text-blue-400">#announcements</code>, to get the general conference announcements,</li>
            <li><code class="text-blue-400">#outreach-social-media</code>, to get the conference posts on social media, so you can share them,</li>
            <li><code class="text-blue-400">#donations</code>, to track the donations through <a href="https://pretix.eu/pyladiescon/2025">Pretix</a> during the conference,</li>
            <li><code class="text-blue-400">#session-notifications</code>, to know the upcoming talks and events,</li>
            <li><code class="text-blue-400">#global-events</code>, to discover events happening in the rest of the world.</li>
        </ul>
        <h3 class="pt-5 pb-2 text-xl font-semibold leading-8">
            Interact with others
        </h3>
        <p>
        The <b>Conference</b> category will be visible once you register, and will contain the following channels:
        </p>
        <ul class="list-disc pl-10 py-1">
            <li><code class="text-blue-400">#welcome</code>, for you to introduce yourself and say hi to others,</li>
            <li><code class="text-blue-400">#general</code>, for a general conference discussion,</li>
            <li><code class="text-blue-400">#networking</code>, so you can share your social media to connect with others,</li>
            <li><code class="text-blue-400">#random</code>, for any discussion not related to the conference,</li>
            <li><code class="text-blue-400">#job-board</code>, in case you are looking for job offers,</li>
            <li><code class="text-blue-400">#resources</code>, for sharing python-related resources,</li>
            <li><code class="text-blue-400">#news-discussion</code>, to interact with the latest Python/PyLadies blog posts,</li>
            <li><code class="text-blue-400">#help</code>, in case you need help with something,</li>
            <li><code class="text-blue-400">#ask-core-devs</code>, for you to meet and ask the many Python Core developers that will be around,</li>
            <li><code class="text-blue-400">#game</code>, for a little game we have prepared for you,</li>
            <li><code class="text-blue-400">#game-ranking</code>, to see the ranking of the game!,</li>
        </ul>
        <p>
        And more importantly, you also will have channels related to the tracks of the conference:
        </p>
        <ul class="list-disc pl-10 py-1">
            <li><code class="text-blue-400">#main-stream</code>, for the main conference track,</li>
            <li><code class="text-blue-400">#activities-open-spaces</code>, for the track for Activities, Workshops, and Open Spaces,</li>
        </ul>
      </div>
    </div>
  </Container>
</Layout>
