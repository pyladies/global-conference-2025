<div class="relative mx-auto max-w-5xl px-6 lg:px-8 mt-10" id="sponsors">
  <div class="mx-auto max-w-2xl lg:text-center">
    <h2 class="text-base font-semibold leading-7 text-pink">{t("Meet the sponsors of our conference.")}</h2>
    <p class="mt-2 mb-10 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("Our Sponsors")}</p>
  </div>

  <!-- Champion -->
  { champions.length > 0 ?
  <h2 class="font-semibold dark:text-white text-3xl mt-20" id="champion-sponsors">Champion</h2>
  <div class="mx-auto my-2 max-w-2xl sm:my-5 lg:my-8 lg:max-w-none">
    <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-1">
      {
        champions.map((item) => (
          <div class="flex flex-col dark:bg-slate-300 hover:bg-gray-50 dark:hover:bg-red-50">
            <dt class="flex items-center align-center justify-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
              <a href={item.url}><img class="w-64 h-64" src={item.logo} /></a>
            </dt>
          </div>
        ))
      }
    </dl>
  </div>
  : null
  }

  <!-- Supporters -->
  { supporters.length > 0 ?
  <h2 class="font-semibold dark:text-white text-3xl mt-20" id="supporters-sponsors">Supporters</h2>
