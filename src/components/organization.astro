---
import Link from "@components/ui/link.astro";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
  {
    name: "Mariatta",
    role: "Conference Co-Chair",
    bio: "org.mariatta",
    photo: "/images/org/mariatta.jpg",
    url: "https://astro.build/",
  },
  {
    name: "Maria José",
    role: "Conference Co-Chair",
    bio: "org.mariajose",
    photo: "/images/org/mariajose.jpg",
    url: "https://alpinejs.dev/",
  },
  {
    name: "Denny Pérez",
    role: "Sponsorship Chair",
    bio: "org.denny",
    photo: "/images/org/denny.jpg",
    url: "https://tailwindcss.com/",
  },
  {
    name: "Georgi Ker",
    role: "Design Chair",
    bio: "org.georgi",
    photo: "/images/org/georgi.jpg",
    url: "https://tailwindcss.com/docs/dark-mode",
  },
  {
    name: "Abigail",
    role: "Program Chair",
    bio: "org.abigail",
    photo: "/images/org/abigail.jpg",
    url: "https://giscus.app/",
  },
  {
    name: "Cristián",
    role: "Infrastructure Chair",
    bio: "org.cristian",
    photo: "/images/org/cristian.jpg",
    url: "https://decapcms.org/",
  },
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8" id="organization">
  <div class="mx-auto max-w-2xl lg:text-center">
    <h2 class="text-base font-semibold leading-7 text-pink">{t("org.title")}</h2>
    <p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("org.subtitle")}</p>
    <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
      {t("org.description")}
    </p>
    <p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
      <Link href="https://pyladies.com" style="muted" size="xs" class="leading-6 text-left text-black dark:text-white">
        {t("org.description_link")}{" "}
        <span class="pl-1 text-black dark:text-white" aria-hidden="true">
          →
        </span>
      </Link>
    </p>
  </div>
  <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
    <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-2">
      {
        features.map((item) => (
          <div class="flex flex-col">
            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
              <img class="w-20 h-20 rounded-full" src={item.photo} />
              <div class="font-medium flex-none text-black dark:text-white">
                <div>{item.name}</div>
                <div class="text-sm text-pink dark:text-gray-400">{item.role}</div>
              </div>
            </dt>
            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
              <p class="flex-auto">{t(item.bio)}</p>
              <p class="mt-6">
                <Link href={item.url} style="muted" size="xs" class="leading-6 text-left text-black dark:text-white">
                  {t("event.learn_more")}{" "}
                  <span class="pl-1 text-black dark:text-white" aria-hidden="true">
                    →
                  </span>
                </Link>
              </p>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</div>
