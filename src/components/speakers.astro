<div class="relative mx-auto max-w-5xl px-6 lg:px-8" id="keynotes">
  <div class="mx-auto max-w-2xl lg:text-center">
    <p class="text-base font-semibold leading-7 text-pink">{t("speakers.subtitle")}</p>
    <h2 class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("speakers.title")}</h2>
  </div>

  <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
    <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-4 lg:max-w-none lg:grid-cols-3">
      {
        speakers.map((item) => (
          <div class="flex flex-col p-4">
           
            <dt class="block items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
                <!-- Speaker Pic -->
                <div class="flex justify-center">
                    <img class="w-40 h-40 rounded-full flex self-center" src={item.photo} />
                </div>
                <!-- Speaker Links -->
              <div class="font-medium items-center block text-black dark:text-white">
                <div class="text-center">{item.name}</div>
                <div class="flex justify-center mt-4">
                    <div class="flex text-black dark:text-white content-center">
                  {item.linkedin && (
                    <a class="duration-300 hover:text-gray-900 dark:hover:text-gray-100 pr-3" href={item.linkedin} title={socials.linkedin.title} target="blank" aria-label={socials.linkedin.title}>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="m-auto h-5 w-5" viewBox="0 0 32 32" set:html={socials.linkedin.svgpath}></svg>
                    </a>
                  )}
                  {item.twitter && (
                    <a class="duration-300 hover:text-gray-900 dark:hover:text-gray-100" href={item.twitter} title={socials.twitter.title} target="blank" aria-label={socials.twitter.title}>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="m-auto h-5 w-5" viewBox="0 0 32 32" set:html={socials.twitter.svgpath}></svg>
                    </a>
                  )}
                </div>
                </div>
                
              </div>
            </dt>
            <!-- Speaker Bio -->
            <dd class="mt-4 flex flex-col text-center leading-7 text-gray-900 dark:text-gray-100">
              <p class="flex-auto">{item.bio}</p>
            </dd>
            <!-- Speaker Talks -->
            <div class="mt-4 border-t">
                <div class="text-sm font-semibold text-gray-900 dark:text-white mt-4 mb-2 text-center">{t("speakers.talks")}</div>
                <div class="space-y-4">
                    {
                        item.talks.map((talk) => (
                            <div class="p-4 border rounded-lg">
                                <div class="text-base font-semibold text-gray-900 dark:text-white">{talk.title}</div>
                                <div class="text-sm text-gray-600 dark:text-gray-400">{talk.date} | {talk.hour}</div>
                                {talk.link && (
                                    <div class="mt-4 flex content-center flex-wrap justify-center">
                                        <Link href={talk.link} style="outline" class="text-sm hover:border-pink">View Details</Link>
                                    </div>
                                )}
                            </div>
                        ))
                    }
                </div>
            </div>
          </div>
        ))
      }
    </dl>
  </div>
</div>